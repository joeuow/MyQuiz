<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Time section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0pt"
        android:orientation="horizontal"
        android:layout_weight="2">

        <TextView
            android:id="@+id/textview_timer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="Time Remaining "
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:textAlignment="textEnd"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp"
            android:layout_weight="4"/>

    </LinearLayout>

    <!-- Question -->
    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:text="Question"
        android:background="@drawable/white"
        android:padding="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0pt"
        android:layout_weight="14"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <!-- Multiple Choices -->
        <!-- Op1 -->

        <TextView
            android:id="@+id/op1_ans"
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:layout_weight="1"
            android:text="Answer1"
            android:clickable="true"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textSize="12sp"
            android:background="@color/colorOptionNormal"/>


        <!-- Op2 -->
        <TextView
            android:id="@+id/op2_ans"
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:layout_weight="1"
            android:text="Answer2"
            android:clickable="true"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textSize="12sp"
            android:background="@color/colorOptionNormal"/>

        <!-- Op3 -->
        <TextView
            android:id="@+id/op3_ans"
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:layout_weight="1"
            android:text="Answer3"
            android:clickable="true"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textSize="12sp"
            android:background="@color/colorOptionNormal"/>

        <!-- Op4 -->
        <TextView
            android:id="@+id/op4_ans"
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:layout_weight="1"
            android:text="Answer4"
            android:clickable="true"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textSize="12sp"
            android:background="@color/colorOptionNormal"/>

        <!-- Op5 -->
        <TextView
            android:id="@+id/op5_ans"
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:layout_weight="1"
            android:text="Answer5"
            android:clickable="true"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textSize="12sp"
            android:background="@color/colorOptionNormal"/>

        <!-- Confirm button -->
        <Button
            android:id="@+id/btu_confirm"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/btu_submit"
            android:layout_gravity="left" />

        </LinearLayout>

    <!--/LinearLayout -->

    <!-- User Menu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0pt"
        android:layout_weight="1.5"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="User Name"
            android:textAlignment="textEnd"/>

        <TextView
            android:id="@+id/user_stat"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:textAlignment="textStart"
            android:text="0 - 0"/>

        <Button
            android:id="@+id/btu_next_q"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btu_next" />
    </LinearLayout>

</LinearLayout>